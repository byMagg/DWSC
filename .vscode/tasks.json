{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ build active file",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-o",
				"/${workspaceFolder}/actividad-1/${fileBasenameNoExtension}",
				"${fileDirname}/component.cpp",
				"${fileDirname}/error.cpp",
				"${fileDirname}/operations.cpp",
			],
			"options": {
				"cwd": "/${workspaceFolder}/actividad-1/"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/g++"
		}
	]
}